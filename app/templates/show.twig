{% extends 'layout.twig' %}
{% import 'favorite-form.twig' as form%}
{% block title %}
Shows
{% endblock %}


{% block content %}

<section class="single-poster">
    <h2> Let us chose what random TV Show you might want to watch !</h2>
    <p> These are some of the top rated shows, feel to watch one, or add it to your favorites.</p>
    <div class="container-poster container-show">
        {% for show in shows %}
          <div class="poster">
                <a href="index.php?p=show_poster&id={{show.id}}" class="more">
                    <img src="https://image.tmdb.org/t/p/w500/{{show.poster_path}}"></img>
                </a>
                <p>{{show.name}}</p>
                {{form.fav('show', show.id, favShows)}}
            </div>
        {% endfor %}
    </div>
    <a id="show-random" href="index.php?p=show_poster" class="btn-random">Let the fate decide</a>
</section>

{% endblock %}

{% block scripts %}
<script src="scripts/show.js"></script>
{% endblock %}