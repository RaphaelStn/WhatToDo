{% extends 'layout.twig' %}

{% block title %}
ADMIN
{% endblock %}

{% block content %}
<section id='admin'>
    <p>You can edit here the content of the homepage post</p>
    <form method="post" class="admin-form">
        <textarea name='content'>
            {% for post in posts %} {{post.content}} {% endfor %}
        </textarea>
        <script>
            tinymce.init({
                selector: 'textarea',
                valid_elements : '+*[*]',
                plugins: 'a11ychecker link advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment link showcomments casechange checklist code export formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
                height:'450px'
            });
        </script>
        <button name="save" type="submit" class="btn">Save changes</button>
    </form>
</section>
{% endblock %}
